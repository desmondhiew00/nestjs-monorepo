    "jwks-rsa": "^3.0.1",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.3",
    "nanoid": "^3.3.4",
    "numeral": "^2.0.6",
    "otp-generator": "^4.0.0",
    "passport": "^0.6.0",
    "passport-apple": "^2.0.2",
    "passport-custom": "^1.1.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7",
    "typeorm": "^0.3.16",
