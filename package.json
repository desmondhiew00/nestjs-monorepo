{
  "name": "halo-chef-be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "yarn ts-node scripts/nest-cli/build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "yarn ts-node scripts/nest-cli/start",
    "start:dev": "yarn ts-node scripts/nest-cli/start -w",
    "start:debug": "nest start --debug --watch",
    "start:prod": "yarn ts-node scripts/nest-cli/start -prod",
    "lint": "eslint \"{src,apps,libs,test,entities}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nest-monorepo/test/jest-e2e.json",
    "typeorm": "yarn ts-node --project ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d typeorm/data-sources/app.data-source",
    "migration:run": "yarn typeorm migration:run",
    "migration:gen": "yarn ts-node scripts/typeorm/migration",
    "migration:revert": "yarn typeorm migration:revert",
    "seed:gen": "yarn ts-node scripts/typeorm/seed",
    "seed:run": "yarn ts-node --project ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d typeorm/data-sources/seed.data-source",
    "seed:revert": "yarn ts-node --project ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d typeorm/data-sources/seed.data-source",
    "generate": "yarn ts-node scripts/nest-cli/generate",
    "app:init": "yarn ts-node scripts/generator/app/init",
    "db:entity": "yarn hygen typeorm entity",
    "db:subscriber": "yarn hygen typeorm subscriber",
    "db:dto": "yarn ts-node scripts/generator/gql",
    "db:authorizer": "yarn hygen gql authorizer",
    "db:hook": "yarn hygen gql hook",
    "barrels": "barrelsby --config ./barrelsby.json"
  },
  "dependencies": {
