  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/async": "^3.2.16",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.11",
    "@types/graphql-upload": "^15.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^14.14.36",
    "@types/numeral": "^2.0.2",
    "@types/otp-generator": "^4.0.0",
    "@types/passport-apple": "^1.1.1",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-google-oauth": "^1.0.42",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "barrelsby": "^2.5.1",
    "chalk": "4.1.2",
    "commander": "^9.5.0",
    "dotenv": "^16.0.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.3",
    "hygen": "^6.2.11",
    "inquirer": "8.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.8.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@lib/database/(.*)": "<rootDir>/libs/database/src/$1",
      "@lib/database": "<rootDir>/libs/database/src",
      "@lib/aws/(.*)": "<rootDir>/libs/aws/src/$1",
      "@lib/aws": "<rootDir>/libs/aws/src",
      "@lib/sendgrid/(.*)": "<rootDir>/libs/sendgrid/src/$1",
      "@lib/sendgrid": "<rootDir>/libs/sendgrid/src",
      "@lib/firebase/(.*)": "<rootDir>/libs/firebase/src/$1",
      "@lib/firebase": "<rootDir>/libs/firebase/src",
      "@lib/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@lib/logger": "<rootDir>/libs/logger/src",
      "@lib/auth/(.*)": "<rootDir>/libs/auth/src/$1",
      "@lib/auth": "<rootDir>/libs/auth/src",
      "@lib/utils/(.*)": "<rootDir>/libs/utils/src/$1",
      "@lib/utils": "<rootDir>/libs/utils/src",
      "@lib/onewaysms/(.*)": "<rootDir>/libs/onewaysms/src/$1",
      "@lib/onewaysms": "<rootDir>/libs/onewaysms/src"
    }
  }
}
